<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jrrjw="http://schemas.android.com/apk/res/com.jrrjw.mobilesafe"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout style="@style/linear_title" >

        <TextView
            style="@style/tv_title"
            android:layout_marginBottom="10dip"
            android:text="3.设置安全号码" />
    </LinearLayout>

    <TextView
        style="@style/tv_title"
        android:layout_marginBottom="7dip"
        android:text="SIM卡变更后" />

    <TextView
        style="@style/tv_title"
        android:layout_marginBottom="7dip"
        android:text="报警短信会发送给安全号码" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入号码" />

    <Button
        android:id="@+id/bt_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:onClick="selectContact"
        android:text="选择联系人" />

    <View style="@style/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_online" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/lockset" />

        <Button style="@style/button_pre" />

        <Button style="@style/button_next" />
    </RelativeLayout>

</LinearLayout>