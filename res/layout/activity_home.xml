<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#99ffffff" >
        <TextView 
            android:text="手机安全管家"
            android:layout_marginLeft="7dip"
            android:textSize="20sp"
            android:layout_marginTop="3dip"
            android:textColor="#000000"
              android:layout_width="match_parent"
        android:layout_height="wrap_content"
            />

        <FrameLayout
            android:id="@+id/fl_grid_top"
            android:layout_width="match_parent"
            android:layout_marginTop="40dip"
            android:layout_height="140dp" >

            <TextView
                android:id="@+id/tv_grid_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dip"
                android:text="90分"
                android:textColor="#50A3EA"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dip"
                android:contentDescription="aa"
                android:src="@drawable/icon_usage_default" />
        </FrameLayout>

        <Button
            android:id="@+id/btn_grid_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fl_grid_top"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_grid_head"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_marginTop="3dip"
            android:text="一键清理" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:footerDividersEnabled="false"
        android:scrollbars="none" >
    </ListView>

</LinearLayout>